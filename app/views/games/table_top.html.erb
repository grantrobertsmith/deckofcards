<div class="row mb-2">
  <div class="col-md-3">
    <form action="/new_hand?game_id=<%= @game.id %>" method="post">
      <button>
        Deal New Hand
      </button>
    </form>
  </div>
  <div class="col-md-3">
    <form action="/flop" method="post">
      <button>
        Flop
      </button>
    </form>
  </div>
  <div class="col-md-3">
    <form action="/turn_river" method="post">
      <button>
        Turn/River
      </button>
    </form>
  </div>
  <div class="col-md-3">
    <form action="/reveal_cards?game_id=<%= @game.id %>" method="post">
      <button>
        Reveal Hands
      </button>
    </form>
  </div>
</div>

<hr>

<div class="row mb-5">
  <div class="col-md-12">
    <% @table_cards.each do |card| %>
    <img src="<%= card.face_image %>" height="150" />
    <% end %>
  </div>
</div>

<hr>

<div class="row mb-4">
  <div class="col-md-12">
  <%
    @hands.each_with_index do |hand, i|
      if @game.revealed or @player_id == @players[i].id then
        hand.each do |card|
  %>
    <img src="<%= card.face_image %>" height="150" />
  <% end end end %>
  </div>
</div>
